

{% load crispy_forms_tags %}
{% load widget_tweaks %}
<div class="modal fade" id="device_modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add A Device</h5>
        <button id="close_button" type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="{% url 'post_device_form' %}" method="POST" enctype="multipart/form-data">
          {% csrf_token %}
          {{ device_form.ram|attr:"type:range"|attr:"class:custom-range"|attr:"min:1"|attr:"max:4096"|as_crispy_field }}
          {{ device_form.disk_size|attr:"type:range"|attr:"class:custom-range"|attr:"min:1"|attr:"max:50"|as_crispy_field}}
          {{ device_form.cpus|attr:"type:range"|attr:"class:custom-range"|attr:"min:1"|attr:"max:4"|as_crispy_field}}
          <input type="hidden" name="next" value="{{ request.path }}"/>
          <input type="submit" value="Submit" class="btn btn-primary"/>
        </form>
      </div>
      <div class="modal-footer">
        <button id="close_button" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
